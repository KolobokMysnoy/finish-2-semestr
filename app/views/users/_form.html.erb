<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, t(".err")) %> <%=t(".proh")%>:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :username, (t(".user")), style: "display: block"  %>
    <%= form.text_field :username, class: 'form-control'%>
  </div>

  <div>
    <%= form.label :password, t(".pas"), style: "display: block" %>
    <%= form.text_field :password,class: 'form-control'%>
  </div>
  
  <div>
    <%= form.label :password_confirmation, t(".cpas"), style: "display: block" %>
    <%= form.text_field :password_confirmation ,class: 'form-control'%>
  </div>

  <div>
    <%= form.submit value:t(".but"),class: 'btn btn-success'%>
  </div>
<% end %>

